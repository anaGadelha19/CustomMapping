    const sidebar = $('#mapping-view-sidebar');
    
    // Close sidebar when close button is clicked
    sidebar.find('.sidebar-close').on('click', function(e) {
        e.preventDefault();
        sidebar.hide();
    });
    
    // Close sidebar when clicking outside of it
    $(document).on('click', function(e) {
